<div>
  <a href="<%= task_url(task) %>">
    <div class="<%= task.is_overdue? ? "bg-orange-100" : "bg-white"%> rounded-md shadow-md mb-4">
      <div>
        <input class="hidden" type="checkbox" id="task_1" checked>
        <label class="flex items-center h-10 px-2 rounded cursor-pointer hover:bg-gray-100" for="task_1">

          <span class="<%= task.is_completed? ? "completed-task" : ""%> flex items-center justify-center w-5 h-5 text-transparent border-2 border-gray-300 rounded-full">
            <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
          <section class="<%= task.is_completed? ? "line-through" : ""%>">
            <span class="ml-2 text-sm font-bold"><%= task.title   %></span>
            <span class="ml-2">-</span>
            <span class="ml-2 text-sm"><%= task.description.truncate(50, omission: '...') %></span>
          </section>
        </label>
      </div>
    </div>
  </a>
</div>
