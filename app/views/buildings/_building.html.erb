<div class="building-item border-solid border-2 flex flex-row gap-2 max-h-56" id="<%= dom_id building %>" style="min-height: 14rem;" >
  <div class="building-img w-1/2">
    <%= image_tag building.cover_image_url(size: :thumb), class: "max-h-56 m-auto",style: "min-height: 14rem;" %>
  </div>
  <div class="building-meta w-1/2 flex flex-col">
    <div class="flex-1">
      <p class="my-5 md:text-md xl:text-3xl font-semibold text-black">
        <%= building.name %>
      </p>

      <p class="my-5">
        <%= building.address&.upcase %>
      </p>
    </div>

    <% if action_name != "show" %>
      <%= link_to "See Apartments", building, class: "rounded-lg py-2 px-2 bg-slate-600 w-fit text-white mb-3" %>
    <% end %>
  </div>
</div>
