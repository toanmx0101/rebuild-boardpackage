<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @building %>

    <% render "apartments", building: @building, apartments: @apartments%>

    <%= link_to 'Edit this building', edit_building_path(@building), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this building', building_path(@building), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to buildings', buildings_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
